@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{ 
    ViewData["Title"] = "Roles"; 
    
 }
<a asp-action="CreateRole" class="btn btn-success mb-3">Add</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">სახელი</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td>
        <form asp-action="DeleteRole" asp-route-id="@item.Id">
            <a class="btn btn-warning" asp-action="EditRole" asp-route-id="@item.Id">Edit</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </td>
</tr>}
    </tbody>
</table>
