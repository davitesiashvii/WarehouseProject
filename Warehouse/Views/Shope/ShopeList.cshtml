@model ShopeList

@{
    ViewData["Title"] = "ShopeList";
}
    <a asp-action="Add" class="btn btn-success mb-2">Add</a>
    <form asp-action="ShopeList2" method="post">
        <div class="input-group">
            <input class="form-control" type="text" name="SearchTerm" id="SearchTerm" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Type</th>
                <th scope="col">Productions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Shopes)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Type</td>
                <td>
                    @foreach (var product in item.Productions)
                    {
                        <div class="btn btn-info">@product</div>
                    }

                </td>
                <td>
                    <form asp-action="DeleteShope" asp-route-id="@item.Id">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                <td>
                </td>
            </tr>
            }

        </tbody>
    </table>

