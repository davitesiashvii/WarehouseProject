@model ProductionFormVM

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Production.Name" class="control-label"></label>
    <input asp-for="Production.Name" class="form-control" />
    <span asp-validation-for="Production.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Production.ManufacturerCompany" class="control-label"></label>
    <input asp-for="Production.ManufacturerCompany" class="form-control" />
    <span asp-validation-for="Production.ManufacturerCompany" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Production.File" class="control-label"></label>
    <input asp-for="Production.File" type="file" />
    <span asp-validation-for="Production.File" class="text-danger"></span>
</div>




